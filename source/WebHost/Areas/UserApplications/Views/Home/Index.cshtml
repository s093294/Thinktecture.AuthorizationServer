@model Thinktecture.AuthorizationServer.WebHost.Areas.UserApplications.Models.UserApplicationsViewModel
@{
    ViewBag.Title = "Client Applications";
}

<h2>@ViewBag.Title for User: @Model.Subject</h2>
<div class="hide" data-bind="css: { hide: !applications().length }">
    <ul class="nav nav-pills">
        <li><button class="btn" data-bind="click:deleteAll">Remove All</button></li>
    </ul>
    <table class="table table-striped table-condensed">
        <thead>
            <tr>
                <th></th>
                <th>Client Application Name</th>
                <th>Services Being Used</th>
            </tr>
        </thead>
        <tbody data-bind="foreach:applications">
            <tr>
                <td>
                    <button class="btn" data-bind="click: function (data, evt) { $parent.delete(data) }">Remove</button>
                </td>
                <td data-bind="text: name"></td>
                <td data-bind="foreach: apps"><span data-bind="if:$index() > 0">,&nbsp;</span><span data-bind="text:$data"></span></td>
            </tr>
        </tbody>
    </table>
</div>
<p data-bind="css:{hide:applications().length}" class="hide alert alert-warning">
    No Applications Found
</p>
